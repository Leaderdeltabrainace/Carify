<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rec_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="@dimen/thirty2"
        app:cardBackgroundColor="#008099"
        app:cardElevation="18dp"
        app:layout_constraintTop_toTopOf="parent"
        >

    </com.google.android.material.card.MaterialCardView>

    <TextView

        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="18dp"
        android:text="@string/MASTER"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/rec_card"
        app:layout_constraintTop_toTopOf="@id/rec_card" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"

        android:elevation="18dp"
        android:src="@drawable/ic_man"
        app:layout_constraintEnd_toEndOf="@id/rec_card"
        app:layout_constraintTop_toTopOf="@id/rec_card" />


</androidx.constraintlayout.widget.ConstraintLayout>